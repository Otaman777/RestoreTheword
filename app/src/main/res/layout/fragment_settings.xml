<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="45dp"
        android:paddingTop="45dp"
        android:text="@string/level"
        android:textColor="@color/forButtons"
        android:textSize="25sp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/level"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/beginner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/forText"
            android:checked="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/beginner_4_or_5_or_6_word_length"
            android:textColor="@color/forText" />

        <RadioButton
            android:id="@+id/veteran_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/forText"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/veteran_4_or_5_or_6_word_length"
            android:textColor="@color/forText" />
    </RadioGroup>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="@string/timer"
        android:textColor="@color/forButtons"
        android:textSize="25sp" />

    <RadioGroup
        android:id="@+id/radioGroupTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/one_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/forText"
            android:checked="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/one_min"
            android:textColor="@color/forText" />

        <RadioButton
            android:id="@+id/two_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/forText"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/two_min"
            android:textColor="@color/forText" />

        <RadioButton
            android:id="@+id/three_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/forText"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/three_min"
            android:textColor="@color/forText" />
    </RadioGroup>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/radioGroupTimer"
        android:text="@string/save"
        android:background="@color/forButtons"/>

</RelativeLayout>