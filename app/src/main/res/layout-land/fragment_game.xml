<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/forText"
        tools:text="ТУТ ТАЙМЕР" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timer"
        android:text="@string/seconds"
        android:textSize="30sp"
        android:textColor="@color/forText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ТУТ ЛІЧИЛЬНИК"
        android:id="@+id/counter"
        android:layout_below="@id/timer"
        android:textColor="@color/forText"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/counter"
        android:layout_below="@id/timer"
        android:text="@string/guessed_words"
        android:textSize="30sp"
        android:textColor="@color/forText"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/randomLine"
        android:orientation="horizontal"
        android:layout_below="@id/counter"
        android:layout_margin="15dp">
        <TextView
            android:id="@+id/firstR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="1"/>
        <TextView
            android:id="@+id/secondR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="2"/>
        <TextView
            android:id="@+id/thirdR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="3"/>
        <TextView
            android:id="@+id/fourthR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="4"/>
        <TextView
            android:id="@+id/fifthR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="5"/>
        <TextView
            android:id="@+id/sixthR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="6"/>
        <TextView
            android:id="@+id/seventhR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="7"/>
        <TextView
            android:id="@+id/eighthR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="8"/>
        <TextView
            android:id="@+id/ninthR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/correctLine"
        android:orientation="horizontal"
        android:layout_below="@id/randomLine"
        android:layout_margin="15dp">
        <TextView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="1"/>
        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="2"/>
        <TextView
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="3"/>
        <TextView
            android:id="@+id/fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="4"/>
        <TextView
            android:id="@+id/fifth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="5"/>
        <TextView
            android:id="@+id/sixth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="6"/>
        <TextView
            android:id="@+id/seventh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="7"/>
        <TextView
            android:id="@+id/eighth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="8"/>
        <TextView
            android:id="@+id/ninth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="8dp"
            android:textColor="@color/forText"
            tools:text="9"/>
    </LinearLayout>
</RelativeLayout>